<h3>Giỏ hàng của bạn <i class='fas fa-shopping-basket'></i></h3>

<table border="1">
    <tr>
        <th>Mã</th>

        <th>Tên sách</th>

        <th>Hình ảnh</th>

        <th>Giá </th>

        <th>Số lượng </th>

        <th>Thành tiền </th>

        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td> @item.iMaSP</td>

            <td>@item.sTenSP</td>

            <td><img src="@Url.Content("~/imagebook/" + item.sHinhAnh)" width="50" height="50" /></td>

            <td>@String.Format("{0:0,0 }", item.dDonGia) đ</td>

             @*Sửa giỏ hàng*@
            @using (Html.BeginForm("CapNhatGioHang", "GioHang", new { @iMaSP = item.iMaSP }))
            {
                <td>@Html.TextBox("txtSoLuong", item.iSoLuong)</td>

                <td> @String.Format("{0:0,0 }", item.ThanhTien) đ</td>
                <td id="form-btn">
                    <input type="submit" class="fas" value="&#xf2f1;" id="btnUpdate" />
                    <br />
                    @*Xóa giỏ hàng*@
                    <a href="@Url.Action("XoaGioHang", new {@iMaSP = item.iMaSP })"><i class='fas fa-trash-alt'></i></a>
                </td>
            }
        </tr>
    }
</table>

<style>
    h3 {
        float: left;
        width: 660px;
        padding-left: 20px;
        color: #8376ae;
    }
    #header-right {
        float: right;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        margin: 10px;
        display: inline;
    }
    #header-right a{
        text-decoration:none;
        font-size:18px;
        font-weight:bold;
        color:#337ab7;
        padding:5px 10px;
    }
    #header-right a:hover{
        background-color: #ddd5d5;
    }

    #btnUpdate {
        background-color: #337ab7;
        border-color: #337ab7;
        border-radius: 4px;
        border-collapse: collapse;
        color: #FFFFFF;
        font-weight: bold;
        margin-bottom: 10px;
    }

    #form-btn a {
        text-decoration: none;
        background-color: #808080;
        border-bottom: 2.4px groove;
        border-right: 2.4px groove;
        border-color: #808080;
        border-collapse: collapse;
        border-radius: 4px;
        color: black;
        font: 400 13.3333px Arial;
        font-weight: bold;
        display: inline-block;
        width:25px;
        height: 15px;
    }
    #form-btn a i{
        line-height:15px;
    }
</style>

