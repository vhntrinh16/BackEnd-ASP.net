@using WebsiteBook.Models;
@model List<Book>
<link rel='stylesheet' href='https://use.fontawesome.com/releases/v5.7.0/css/all.css' integrity='sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ' crossorigin='anonymous'>

@foreach (var item in Model)
{
    <div class="templatemo_product_box">
        <h1><i class='fas fa-book'></i> @item.BookName</h1>
        <a href="@Url.Action("DetailBook","Product",new { @MaSach=item.BookID})"><img src="@Url.Content("~/imagebook/"+item.CoverImage)" width="100" height="140" alt="image" /></a>
        <div class="product_info">
            <p>@item.Description</p>
            <h3>Giá: @String.Format("{0:0,0 }", item.Price) đ</h3>
            <div class="buy_now_button"><a href="@Url.Action("ThemGioHang", "GioHang", new { @iMaSach = item.BookID, @strURL = Request.Url.ToString()})"><i class='fas fa-shopping-cart'></i> Buy Now</a></div>
            <div class="detail_button"><a href="@Url.Action("DetailBook","Product", new { @MaSach=item.BookID})"><i class="fa fa-info-circle"></i> Detail</a></div>
        </div>
        <div class="cleaner">&nbsp;</div>
    </div>
}
